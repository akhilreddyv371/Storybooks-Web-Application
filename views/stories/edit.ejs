<% layout('layouts/main') %>
<h1>Edit Story</h1>
<div class="row">
    <form action="/<%=id%>?_method=PUT" method="post" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title" value="<%= story.title %>">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="status" name="status">
                    <% if(story.status == 'public'){%> 
                        <option value="public" selected>Public</option>
                        <%} else {%>
                            <option value="private" selected>Private</option>
                            <%}%>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Tell Us Your Story:</h5>
                <textarea id="body" name="body" ><%= story.body%></textarea>
            </div>
        </div>

        <div class="row">
            <button class="btn" value="Save" >Submit</button>
            <a href="/stories" class="btn orange">Cancel</a>
        </div>
    </form>
</div>